<div class="modal fade" id="modal_book" tabindex="-1" role="dialog" aria-labelledby="modal_bookLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal_title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="book_form">
                    <div class="mb-3 form-label-group">
                        <input type="text" name="nome" id="nome" class="form-control" required>
                        <label for="nome">Nome</label>
                    </div>
                    <div class="mb-3 form-label-group">
                        <input type="text" name="escritor" id="escritor" class="form-control" required>
                        <label for="escritor">Escritor</label>
                    </div>
                    <div class="mb-3 form-label-group">
                        <input type="text" name="editora" id="editora" class="form-control" required>
